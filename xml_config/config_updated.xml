<?xml version="1.0"?>

<configuration>
	
	<devices>
		<device d_id="d0">
			<name>device_name</name> <!-- name of the device -->
			<mac>XX:XX:XX:XX:XX</mac> <!-- mac address -->
			<dev_type>0</dev_type> <!-- type of devices 0-plugable, 1-who knows... -->
			<enter>2</enter> <!-- enter action 0-ignore, 1-off, 2-on -->
			<exit>1</exit> <!-- exit action 0-ignore, 1-off, 2-on -->
			<z_id>z0</z_id> <!-- this is the zone it will be associaed with -->
		</device>
	</devices>

	<wearables>
		<wearable w_id="w0">
			<name>wearable_name</name>
			<hw_id>XXXX</hw_id> <!-- hardware id of the device -->
		</wearable>
	</wearables>

	<zones>
		<zone z_id="z0">
			<name>zone_name</name>
			<hw_id>XXXX</hw_id> <!-- hardware id of the device -->
			<threshold>100</threshold> <!-- threshold that determines when to turn on -->
		</zone>
	</zones>
	
	<profiles>
		<profile p_id="p0">
			<name>profile_name</name>
			<wearables>
				<w_id>w0</w_id>
			</wearables>
			<zones>
				<z_id>z0</z_id>
			</zones>
		</profile>
	</profiles>

</configuration>


